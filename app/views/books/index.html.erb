<h1>Books</h1>

<head>
  <style>
  table,th,td
  {
  	border:1px solid;
  	border-color:#C0C0C0;
  	border-collapse:collapse;
  	padding:15px;
  	font-family:Arial;
  }
  </style>
 </head>

	<% all_books = Book.all%>

	<table style="width:700px">
	<tr>
		<td><b>Title</b></td>
		<td><b>Author</b></td>
	<tr>

	<% all_books.each do |book| %>
	  <tr>
		<td><%= book["title"]%></td>
		<td><%= book["author"]%></td>
      <tr>
    <%end%>
    </table>